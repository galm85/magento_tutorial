<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="macademy_minerva_faq" engine="innodb" comment="FAQs">
        <column name="id" xsi:type="int" padding="10" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column name="question" xsi:type="text"  nullable="false"  comment="Question"/>
        <column name="answer" xsi:type="text"  nullable="false"  comment="Answer"/>
        <column name="is_published" xsi:type="boolean"  nullable="false"  default="false" comment="Is Published"/>
        <column name="created_at" xsi:type="datetime"  nullable="false"  default="CURRENT_TIMESTAMP" comment="Created At" on_update="false"/>
        <column name="updated_at" xsi:type="datetime"  nullable="false"  default="CURRENT_TIMESTAMP" comment="Updated At" on_update="true"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
